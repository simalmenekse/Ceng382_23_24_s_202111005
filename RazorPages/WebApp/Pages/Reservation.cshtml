@page
@model ReservationModel
@{
    ViewData["Title"] = "Create Reservation";
}
<br>
<div class="container">
        <div class="row justify-content-center">
                    <div class="col-md-6"><br>

            <img src="~/pexels-pixabay-289737.jpg" class="img-fluid border rounded-3 shadow-lg mb-4" alt="Example image"
                width="700" height="200" loading="lazy">
                <h2 class="">Create Reservation</h2>

<form method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="Reservation.Room.RoomName" class="form-label">Room Name</label>
        <select asp-for="Reservation.Room.RoomName" class="form-select" asp-items="Model.Rooms">
            <option value="">Select a room</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Reservation.DateTime" class="form-label">Reservation Date</label>
        <input asp-for="Reservation.DateTime" class="form-control" class="form-control" type="datetime-local" />
    </div>
    <button type="submit" class="btn btn-primary">Add Reservation</button>
</form>
</div>
</div>
</div>