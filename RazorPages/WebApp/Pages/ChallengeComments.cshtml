@page "{id}"
@model ChallengeCommentsModel
@{
    ViewData["Title"] = "Challenge Details";
}
<div class="container mt-4">
    <div class="jumbotron">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h1 class="display-4">@Model.Challenge.Category</h1>
                <p class="lead">@Model.Challenge.Instructions</p>
            </div>
            <div class="text-right">
                <h3>Average Rating</h3>
                <div class="d-flex align-items-center" style="font-size: 24px;"> <!-- Adjust font size here -->
                    @{
                        var averageRating = Model.AverageRating;
                        for (var i = 1; i <= 5; i++)
                        {
                            if (averageRating >= i)
                            {
                                <span>&#9733;</span> <!-- Full star -->
                            }
                            else if (averageRating > i - 1 && averageRating < i)
                            {
                                <span>&#9734;</span> <!-- Half star -->
                            }
                            else
                            {
                                <span>&#9734;</span> <!-- Empty star -->
                            }
                        }
                    }
                    <span class="ml-2">@Model.AverageRating</span>
                </div>
            </div>
        </div>
        <hr class="my-4">
        <h2 style="color: rgb(137, 137, 215)" class="font-weight-bold">Comments and Ratings</h2><br>
        <div class="row">
            @foreach (var comment in Model.Comments)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body d-flex">
                            <div class="mr-3">
                                @if (comment.User.ProfilePicture != null)
                                {
                                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(comment.User.ProfilePicture))" class="rounded-circle img-fluid" alt="Profile Picture" style="max-width: 50px; max-height: 50px;">
                                }
                                else
                                {
                                    <img src="https://via.placeholder.com/50" class="rounded-circle img-fluid" alt="Profile Picture" style="max-width: 50px; max-height: 50px;">
                                }
                            </div>
                            <div>
                                <h5 class="card-title">@comment.User.UserName.Split('@')[0]</h5>
                                <p class="card-text"><strong>Rating:</strong> @comment.Rating</p>
                                <p class="card-text">@comment.Content</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
