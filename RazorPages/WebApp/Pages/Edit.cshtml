@page
@model WebApp.Pages.Reservations.EditReservationModel
@{
    ViewData["Title"] = "Edit Reservation";
}

<h2>Edit Reservation</h2>

<form method="post">
    <input type="hidden" asp-for="Reservation.Id" />
    <div class="mb-3">
        <label asp-for="Reservation.Room.RoomName" class="form-label">Room Name</label>
        <input asp-for="Reservation.Room.RoomName" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label asp-for="Reservation.DateTime" class="form-label">Reservation Date and Time</label>
        <input asp-for="Reservation.DateTime" class="form-control" type="datetime-local" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/ReservationShow" class="btn btn-secondary">Cancel</a>
</form>
