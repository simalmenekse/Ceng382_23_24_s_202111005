@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<br></br>
<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row justify-content-center">
    <div class="col-md-6">
        <form id="account" method="post" class="mt-5">
            <h2 class="mb-4">Log in with your account</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"
                    placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                    aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">@Html.DisplayNameFor(m =>
                    m.Input.RememberMe)</label>
            </div>
            <div class="text-center">
                <div class="d-grid gap-2">
                    <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Log in</button>
                    <button id="register-button" type="button" class="btn btn-secondary btn-lg"
                        onclick="location.href='@Url.Page("./Register", new { returnUrl = Model.ReturnUrl })'">Register
                        as a new user</button>
                </div>
            </div>
            <div class="mt-3 text-center">
                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">Forgot your
                    password?</a>
            </div>

            <div class="mt-3 text-center">
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-decoration-none">Resend
                    email confirmation</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
