@page
@model IndexModel
@inject ReservationService ReservationService

@{
    ViewData["Title"] = "Home page";
}

<main>
    <div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold text-body-emphasis">Welcome to our Room Reservation Service</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4">Quickly add Rooms to the Database or view the existing rooms.</p>
      <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
<a class="btn btn-primary btn-lg px-4 gap-3" asp-page="/FormPage">Add Room</a>
        <a class="btn btn-outline-secondary btn-lg px-4" asp-page="/Rooms">Show Rooms</a>
      </div>
    </div>
  </div>
</main>

