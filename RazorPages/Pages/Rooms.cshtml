@page
@model RoomsModel
@{
    ViewData["Title"] = "Rooms";
}

<h1>Rooms</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Room Name</th>
            <th>Capacity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model.Rooms)
        {
            <tr>
                <td>@room.Id</td>
                <td>@room.RoomName</td>
                <td>@room.Capacity</td>
            </tr>
        }
    </tbody>
</table>

<div class="container mt-3">
    <a class="btn btn-primary" asp-page="/FormPage">Add Room</a>
    <a class="btn btn-secondary" asp-page="/Index">Home</a>
</div>